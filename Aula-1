//EXERCICIO 5
import * as leitor from "readline-sync"

function main(): void {
    let n1 = 20
    let n2 = 12
    let n3 = 3

    console.log(soma(n1, n2, n3));
    console.log(subtração(n1, n2, n3));
    console.log(multiplicação(n1, n2, n3));
    console.log(divisão(n1, n2, n3));

}
function soma(n1, n2, n3): Number {
    let resultado1 = n1 + n2 + n3
    return resultado1
}

function subtração(n1, n2, n3): Number {
    let resultado2 = n1 - n2 - n3
    return resultado2
}
function multiplicação(n1, n2, n3): Number {
    let resultado3 = n1 * n2 * n3
    return resultado3
}

function divisão(n1, n2, n3): Number {
    let resultado4 = n1 / n2 / n3
    return resultado4
}

main()




