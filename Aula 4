// EXERCICIO 2
let a = true

while (a) {
    let cor = leitor.question("Digite uma cor: ")

    switch (cor) {
        case "branco":
            console.log("Branco me lembra a never")
            break
        case "azul":
            console.log("Azul me lembra o mar");
            break
        case "preto":
            console.log("Preto me lembra a noite");
            break
        default:
            console.log("opcao invalida");
            a = false
            break


    }


}



