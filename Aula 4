// EXERCICIO 5

let a = true;

while (a) {
    let nota = leitor.questionInt("Digite a nota de 0 a 100: ");

    if (nota >= 0 && nota <= 100) {
        let conceito

        if (nota >= 90) {
            conceito = 'A'
        } else if (nota >= 80) {
            conceito = 'B'
        } else if (nota >= 70) {
            conceito = 'C'
        } else if (nota >= 60) {
            conceito = 'D'
        } else {
            conceito = 'F'
        }

        switch (conceito) {
            case 'A':
                console.log("Conceito A - Excelente!")
                break;
            case 'B':
                console.log("Conceito B - Bom trabalho!")
                break;
            case 'C':
                console.log("Conceito C - Desempenho satisfatório.")
                break:
            case 'D':
                console.log("Conceito D - Você passou, mas precisa melhorar.")
                break;
            case 'F':
                console.log("Conceito F - Infelizmente, você não passou.")
                break;
        }
    }
}


